{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MiniPanda",
  "scopeName": "source.panda",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#builtins" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#classes" },
    { "include": "#enums" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.panda",
          "match": "//.*$"
        },
        {
          "name": "comment.block.panda",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.panda",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.panda",
              "match": "\\\\."
            },
            {
              "name": "variable.other.interpolation.panda",
              "begin": "\\{",
              "end": "\\}"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.panda",
          "match": "\\b0[xX][0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.panda",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.panda",
          "match": "\\b(if|else|while|for|in|return|break|continue)\\b"
        },
        {
          "name": "keyword.control.exception.panda",
          "match": "\\b(try|catch|finally|throw)\\b"
        },
        {
          "name": "keyword.declaration.panda",
          "match": "\\b(var|func|class|enum)\\b"
        },
        {
          "name": "keyword.modifier.panda",
          "match": "\\b(static|export|global)\\b"
        },
        {
          "name": "keyword.other.panda",
          "match": "\\b(import|as)\\b"
        },
        {
          "name": "variable.language.this.panda",
          "match": "\\b(this)\\b"
        },
        {
          "name": "variable.language.super.panda",
          "match": "\\b(super)\\b"
        }
      ]
    },
    "builtins": {
      "patterns": [
        {
          "name": "support.function.builtin.panda",
          "match": "\\b(print|type|str|num|bool|abs|floor|ceil|round|sqrt|pow|min|max|len|push|pop|range|keys|values|contains|slice|join|split|time|random|randomInt|now|trace|debug|stacktrace|assert)\\b"
        },
        {
          "name": "support.class.builtin.panda",
          "match": "\\b(date|regex|json|_G)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.panda",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.panda",
          "match": "\\b(null)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.panda",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.panda",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.nullcoalesce.panda",
          "match": "\\?\\?"
        },
        {
          "name": "keyword.operator.optional.panda",
          "match": "\\?\\.|\\?\\["
        },
        {
          "name": "keyword.operator.ternary.panda",
          "match": "\\?|:"
        },
        {
          "name": "keyword.operator.bitwise.panda",
          "match": "(<<|>>|&|\\||\\^|~)"
        },
        {
          "name": "keyword.operator.assignment.compound.panda",
          "match": "(\\+=|-=|\\*=|/=|%=)"
        },
        {
          "name": "keyword.operator.increment.panda",
          "match": "(\\+\\+|--)"
        },
        {
          "name": "keyword.operator.arithmetic.panda",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.panda",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.panda",
          "match": "=>"
        },
        {
          "name": "keyword.operator.spread.panda",
          "match": "\\.\\.\\."
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.panda",
          "match": "\\b(func)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "keyword.declaration.function.panda" },
            "2": { "name": "entity.name.function.panda" }
          }
        },
        {
          "name": "meta.function-call.panda",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.function.panda" }
          }
        }
      ]
    },
    "classes": {
      "patterns": [
        {
          "name": "meta.class.panda",
          "match": "\\b(class)\\s+([a-zA-Z_][a-zA-Z0-9_]*)(\\s*:\\s*([a-zA-Z_][a-zA-Z0-9_]*))?",
          "captures": {
            "1": { "name": "keyword.declaration.class.panda" },
            "2": { "name": "entity.name.class.panda" },
            "4": { "name": "entity.other.inherited-class.panda" }
          }
        }
      ]
    },
    "enums": {
      "patterns": [
        {
          "name": "meta.enum.panda",
          "match": "\\b(enum)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.enum.panda" },
            "2": { "name": "entity.name.enum.panda" }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "meta.variable.panda",
          "match": "\\b(var)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.variable.panda" },
            "2": { "name": "variable.other.panda" }
          }
        }
      ]
    }
  }
}
